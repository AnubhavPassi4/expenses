<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backpage"
    tools:context="com.example.user.expenses2.addActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginTop="29dp"
        android:id="@+id/textView7"
        android:text="Cost"
        android:layout_below="@+id/textView6"
        />

    <TextView
        android:text="Budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20dp"
        android:id="@+id/textView13"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Item purchased"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/editText5"
        android:layout_alignBottom="@+id/editText5"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Remaining Budget"
        android:textColor="#fff"
        android:textSize="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remainingBudget"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView13"
        android:layout_toStartOf="@+id/date"
        android:layout_marginEnd="76dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showBalance"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_alignTop="@+id/remainingBudget"
        android:layout_alignStart="@+id/editText5"
        android:layout_marginTop="11dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Item name"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:id="@+id/editText5"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/remainingBudget"
        android:layout_toEndOf="@+id/remainingBudget" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_below="@+id/editText6"
        android:layout_toEndOf="@+id/button5"
        android:layout_marginTop="22dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:textColor="#fff"
        android:hint="add cost"
        android:textColorHint="#fff"
        android:id="@+id/editText6"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/editText5" />

    <TextView
        android:text="Date"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:layout_above="@+id/button5"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#fff"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/remainingBudget" />

    <Button
        android:text="Add"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:id="@+id/button5"
        android:onClick="addButton"
        android:background="@drawable/gold"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/date"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="take photo"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/gold"
        android:id="@+id/launchcamera"
        android:onClick="clickphoto"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
